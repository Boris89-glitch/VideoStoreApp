@model IEnumerable<Video_store_app.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Database</h2>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Id",
                        render: function (data, type, movie) {
                            return "<a href='/movies/details/" + data + "'>" + movie.Name + "</a>";
                        }
                        
                    },
                    {
                        data: "Genre.Name"
                    }
                ]
            });
            
        });
    </script>
}                      